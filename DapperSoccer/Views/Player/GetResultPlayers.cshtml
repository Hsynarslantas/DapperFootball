@model List<DapperSoccer.Dtos.PlayerDto.ResultPlayerDto>
@{
    ViewData["Title"] = "GetResultPlayers";
    Layout = "~/Views/Shared/Layout.cshtml";
    string searchTerm = ViewBag.SearchTerm ?? "";
}
@section Styles {
    <style>
        .content-wrapper {
            background-color: #eaf8e4 !important;
        }

        .search-card {
            background: #28a745;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .search-input {
            border: none;
            border-radius: 5px;
            padding: 10px;
            font-size: 16px;
        }

        .btn-ara {
            background: white;
            color: #28a745;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
        }

        .btn-temizle {
            background: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: bold;
            text-decoration: none;
        }
    </style>
}

<div class="container mt-5">
    <div class="search-card">
        <form method="post" asp-action="GetResultPlayers">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <input type="text"
                           name="searchTerm"
                           value="@searchTerm"
                           class="search-input w-100"
                           placeholder="Futbolcu adı yazın... (örn: Messi, a)">
                </div>
                <div class="col-md-3 mt-2 mt-md-0">
                    <button type="submit" class="btn-ara w-100">
                        🔍 Ara
                    </button>
                </div>
                <div class="col-md-3 mt-2 mt-md-0">
                    <a href="@Url.Action("GetResultPlayers")" class="btn-temizle w-100 d-block text-center">
                        ❌ Temizle
                    </a>
                </div>
            </div>
            @if (!string.IsNullOrEmpty(searchTerm))
            {
                <div class="mt-3 text-white">
                    <i class="fas fa-search me-2"></i>
                    <strong>"@searchTerm"</strong> için <strong>@Model.Count</strong> futbolcu bulundu
                </div>
            }
        </form>
    </div>
    <div class="card shadow-lg border-success">
        <div class="card-header bg-success text-white d-flex align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-shield-alt me-2"></i>
                @if (!string.IsNullOrEmpty(searchTerm))
                {
                    <span>Arama Sonuçları</span>
                }
                else
                {
                    <span>Tüm Futbolcular</span>
                }
            </h4>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle text-center">
                        <thead class="table-success">
                            <tr>
                                <th>Futbolcu Adı</th>
                                <th>Futbolcu Doğum Tarihi</th>
                                <th>Futbolcu Boyu</th>
                                <th>Futbolcu Kilosu</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.player_name</td>
                                    <td class="fw-bold">@item.birthday</td>
                                    <td>@item.height</td>
                                    <td>@item.weight</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <!-- Sonuç bulunamadı mesajı -->
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Futbolcu bulunamadı</h5>
                    <p class="text-muted">"@searchTerm" için sonuç bulunamadı</p>
                    <a href="@Url.Action("GetResultPlayers")" class="btn btn-success">
                        <i class="fas fa-list me-2"></i>Tüm Futbolcuları Göster
                    </a>
                </div>
            }
        </div>
    </div>
</div>