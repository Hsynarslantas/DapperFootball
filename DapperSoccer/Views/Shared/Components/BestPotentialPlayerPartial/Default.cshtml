@model DapperSoccer.Dtos.PlayerDto.BestPotentialPlayerDto

<div class="card shadow border-success">
    <div class="card-header bg-success text-white">
        <h4 class="mb-0"><i class="fas fa-star"></i> @Model.player_name</h4>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-md-3">
                <input type="text" class="knob" value="@Model.potential" data-width="100" data-height="100" data-fgColor="#3c8dbc" data-readonly="true" />
                <div class="mt-2">Potential: @Model.potential</div>
            </div>
            <div class="col-md-3">
                <input type="text" class="knob" value="@Model.dribbling" data-width="100" data-height="100" data-fgColor="#f56954" data-readonly="true" />
                <div class="mt-2">Dribbling: @Model.dribbling</div>
            </div>
            <div class="col-md-3">
                <input type="text" class="knob" value="@Model.finishing" data-width="100" data-height="100" data-fgColor="#00a65a" data-readonly="true" />
                <div class="mt-2">Finishing: @Model.finishing</div>
            </div>
            <div class="col-md-3">
                <input type="text" class="knob" value="@Model.stamina" data-width="100" data-height="100" data-fgColor="#00c0ef" data-readonly="true" />
                <div class="mt-2">Stamina: @Model.stamina</div>
            </div>
        </div>
    </div>
</div>
