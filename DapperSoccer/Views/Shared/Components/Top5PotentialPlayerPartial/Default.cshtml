@model List<DapperSoccer.Dtos.PlayerDto.TopPotentialPlayerDto>

<div class="card shadow-sm">
    <div class="card-header border-0 bg-success text-white">
        <h3 class="card-title mb-0">Potansiyeli En Yüksek 5 Futbolcu</h3>
    </div>
    <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Futbolcu İsmi</th>
                    <th>Rating</th>
                    <th>Potansiyel</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.player_name</td>
                        <td>@item.overall_rating</td>
                        <td>
                            <div class="d-flex align-items-center">
                                <small class="text-success me-2 fw-bold">@item.potential</small>
                                <div class="progress flex-grow-1" style="height: 6px;">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: @item.potential%" aria-valuenow="@item.potential" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
