@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>FootballArslan</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/AdminLTE-3.0.4/plugins/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" />
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet" />
</head>
<body class="hold‑transition layout‑fixed sidebar-mini">
    <div class="wrapper">

        <!-- Sidebar: yeşil ve futbol ikonu ile -->
        <aside class="main-sidebar elevation-4" style="background-color:black; color: whitesmoke;">
            <div class="sidebar">
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/AdminLTE-3.0.4/dist/img/admin.jpg" class="img-circle elevation-2" style="width: 60px; height: 60px; object-fit: cover;" alt="User Image" />
                    </div>
                    <div class="info">
                        <a href="#" class="d-block" style="color: white;">Jurgen Klopp</a>
                    </div>
                </div>
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                        <li class="nav-item">
                            <a href="/Dashboard/Index" class="nav-link">
                                <i class="nav-icon fas fa-chart-line"></i><p>Dashboard</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Team/AllTeam" class="nav-link">
                                <i class="fas fa-futbol nav-icon"></i><p>    Tüm Takımlar</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Player/GetResultPlayers" class="nav-link">
                                <i class="fas fa-users"></i> <p>    Tüm Oyuncular</p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <!-- Page Content -->
        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                </div>
            </div>
            <section class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </section>
        </div>

    </div>

    <!-- SCRIPT’LER -->
    <script src="~/AdminLTE-3.0.4/plugins/jquery/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/chart.js/Chart.min.js"></script>
    <script src="~/AdminLTE-3.0.4/plugins/jquery-knob/jquery.knob.min.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/adminlte.js"></script>
    <script src="~/AdminLTE-3.0.4/dist/js/demo.js"></script>
    @RenderSection("Styles", required: false)
    @RenderSection("Scripts", required: false)
    
</body>
</html>
